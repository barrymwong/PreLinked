//this file is compiled to target.css
//then copied to dist/styles/main.css
html, body
  background url(https://webfiles.uci.edu/shaohuaz/share/prelinked/bg-striped.gif) #fff repeat
h1, h2, h3, h4
  font-family Play, helvetica, sans-serif
#app .logo
  width 220px
#app ul li
  list-style-type none
#app .page.current
  display block
#app fieldset .scroll
  max-height 600px
  overflow-y scroll
.each-connection
  position relative
.each-connection .modal-details .image
  position absolute
  top 0
  left 0
.each-connection .info
  margin-left 90px
  min-height 90px
.each-connection .info h2
  font-size 18px
  margin-bottom 5px
.each-connection .info .headline
  font-size 14px
  line-height 20px
  margin-top -8px
.reveal-modal ul li
  list-style-type none
.reveal-modal .info h2
  margin-bottom 5px
.job
  clear both
.job h2
  font-size 22px
  line-height 22px
  margin-bottom 5px
.job .info
  list-style-type none
  font-size 14px
  line-height 18px
.job .location
  color #aaa
#search-filters .filter-item.button
  padding-right 0
#search-filters .filter-item .rm
  font-weight normal
  padding 8px 8px 8px 2px
  color #aaa
  line-height 0
  font-size 15px
.column-left
  background-color #d1edf6
  padding-top 10px
.column-mid
  background-color #fff
  min-height 300px
  padding-top 10px
.column-right
  background #ddd
  padding-top 10px
#search-filters .filter-item:hover .rm
  color #000
#search-filters .filter-item .rm:hover
  color red
#job-results .loader, #connections .loader
  min-height 300px
#connections.scroll
  max-height 600px
  overflow-y auto
.loader
  background url(https://webfiles.uci.edu/shaohuaz/share/prelinked/loader.gif) no-repeat 50% 50%
  height 40px
.inputFilter
  position relative
.addFilterButton
  position absolute
  top 2px
  right 2px
  height: 29px
.distanceRange
  width 70px
  height 40px
img.topbar-photo
  width 45px
  height 45px
.name
  display inline-block
  color #2ba6cb
.industry
  display inline-block
  margin-left 70px
  position: relative
  bottom: 5px;
.modalHeader
  text-align center
  border: solid gray 3px
  border-radius: 1em
.positions
  margin-top: 20px;
.summary
  font-size .8em
.modal
  border-radius 0.5em
.positionsHeader
  margin-top 25px
  margin-bottom -15px
.summaryHeader
  border-top dashed #2ba6cb 3px
  padding-top 20px
  margin-bottom: 5px;
.sectionLabel
  color #2ba6cb
  font-weight bold
.inline
  display inline-block
.viewProfileButton
  color white
.viewProfileContainer
  text-align center
.viewProfileButton:hover
  color white
.viewProfileContainer button
  top 45px
div.degree
  display inline-block
  margin-left 3px
  background #e1e9ec
  text-align center
  font-size 14px
  width 30px
  border-radius .2em
.connectionLocation
  font-size 12px
  color gray
#indeedLogo
  position: absolute;
  top 10px
  right 20px
.numberOfConnections
  display inline-block
  margin-left 3px
.exitModal
  position: absolute;
  top 8px
  right 20px
.exitModal:hover
.showRelations
  margin-top: 25px
.interConnectionInfoLI
  width 80px
  display: inline-block
  color red
.page
  background #f2f2f2
.header
  background-color #ffffff
  border-bottom 2px solid #03487d
  padding-top 20px
.footer
  border-top 10px solid #03487d
  font-size 14px
  padding 50px 0
.header #user-view ul
  margin-bottom 0px
.header .logo
  position relative
  top 8px
.showConnectButton:hover
  color #fff
  background-color #444
.showConnectButton
  background url(https://webfiles.uci.edu/shaohuaz/share/prelinked/connection.png) no-repeat 95% 50% #666
  padding 2px 25px 2px 2px
  border 1px solid #666
  border-radius 2px
  color #fff
  text-align center
  width 54px
  font-size 14px

.icon-indeed, .icon-linkedin, .icon-hackreactor, .icon-github
  background-image url(https://webfiles.uci.edu/shaohuaz/share/prelinked/sprite-footer.png)
  height 38px
  display inline-block
  vertical-align middle
  opacity 0.6
.icon-indeed
  background-position -106px 0
  width 92px
.icon-linkedin
  background-position 276px 0
  width 40px
.icon-hackreactor
  background-position 121px 3px
  width 121px
.icon-github
  background-position 0 0
  width 45px
.footer .col
  margin 10px 5% 10px 0
.footer .col strong
  margin-bottom 5px
  display block
  color #666

#page-search h2.title-search
  background-color #03497e
#page-search h2.title-header
  margin 20px 0 0 0
  line-height 28px
  font-size 24px
  padding 10px 15px
  color #fff
  text-shadow 2px 2px 2px #000
.title-network.arrow_box
  z-index 1
.title-network.arrow_box
  background-color #666
  color #fff
.title-network.arrow_box:after
  border-right-color #666
.arrow_box
  position relative
  background #0596d5
.arrow_box:after
  right 100%
  border solid transparent
  content " "
  height 0
  width 0
  position absolute
  pointer-events none
.arrow_box:after
  border-color rgba(136, 183, 213, 0)
  border-right-color #0596d5
  border-width 15px
  top 50%
  margin-top -15px

.modal-details
  position relative
.modal-details .degree
  position absolute
  top -5px
  left 52px
  font-size 14px
  color #555
  box-shadow 1px 1px 2px #666










