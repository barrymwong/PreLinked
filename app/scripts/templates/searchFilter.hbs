<h3>Search Jobs</h3>
<form id="form-search">
  <label>
    Job
    <input class="searchInput" id="jobTitleSearchInput" name="job-title" type="text" placeholder="Example: Software Engineer">
  </label>
  <div>
    {{#each jobTitle}}
      <a class="filter-item button tiny round secondary removeJobTitleFilter {{this}} removeFilter">{{this}}<span class="rm">&times;</span></a>
    {{/each}}
  </div>
  <label>
    Location
    <input class="searchInput" id="locationSearchInput" name="job-location" type="text" placeholder="Example: San Francisco, CA">
  </label>
  <div>
    {{#if jobLocation}}
      <a class="filter-item button tiny round secondary removeJobLocationFilter {{this}} removeFilter">{{jobLocation}}<span class="rm">&times;</span></a>
    {{/if}}
  </div>
  <label>
    Keywords
    <input class="searchInput" id="keywordsSearchInput" name="job-keywords" type="text" placeholder="Example: Javascript, Node.js">
  </label>
  <div>
    {{#each jobKeywords}}
      <a class="filter-item button tiny round secondary removeJobKeywordsFilter {{this}} removeFilter">{{this}}<span class="rm">&times;</span></a>
    {{/each}}
  </div>
  <button>Search</button>
</form>